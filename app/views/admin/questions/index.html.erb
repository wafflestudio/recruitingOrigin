<h1>Listing Questions</h1>
<div class="table">
  <table class="listing" cellpadding="0" cellspacing="0">
    <tr>
      <th>Title</th>
      <th>Type</th>
      <th>Items</th>
      <th>Order</th>
    </tr>

    <% @questions.each do |question| -%>
    <tr>
      <td><%= link_to(question.title, admin_question_path(question)) %></td>
      <td><%= question.type_name %></td>
      <td>
        <ul>
        <% question.items.each do |item| -%>
          <li><%= item.to_s %></li>
        <% end -%>
        </ul>
      </td>
      <td><%= question.order %></td>
    </tr>
    <% end -%>
  </table>
</div>

<%= link_to "New Question", new_admin_question_path %>
